{
  "name": "nodejs-web3-auction",
  "version": "1.0.0",
  "description": "web3 app for auction",
  "main": "index.js",
  "engines": {
    "node": "20.11.1",
    "npm": "10.4.0"
  },
  "scripts": {
    "start": "node ./prod/index.js",
    "git": "git add . && git commit -m \"$npm_package_name ($npm_package_version) ## $(date) ## \" && git push origin master",
    "inspect": "node --inspect ./prod/src/index.js",
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "pre:build": "rm -rf ./prod && tsc && cd ./webui && npm run build",
    "move-folders": "mv ./webui/dist ./prod/public",
    "self:build": "npm run pre:build && npm run move-folders",
    "build": "node -v",
    "serve": "node ./prod/src/index.js",
    "serve:pm2": "pm2 start ./prod/src/index.js",
    "serve:pm2:runtime": "pm2-runtime start ./prod/src/index.js",
    "deploy": "npm run self:build && npm run git && git push heroku master"
  },
  "author": "Farid Mansimli",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.5.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.27",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "hardhat": "^2.22.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "reactjs",
    "solidity",
    "hardhat"
  ]
}