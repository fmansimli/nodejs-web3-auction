{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "prod",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "exclude": [
    "./contracts",
    "./backup",
    "./webui",
    "./artifacts",
    "./typechain-types",
    "./ignition",
    "./cache",
    "./test",
    "./hardhat.config.ts"
  ]
}
